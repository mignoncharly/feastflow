# FeastFlow Environment Configuration

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Secret key for cryptographic signing (generate a new one for production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database engine: sqlite3, postgresql, mysql
DB_ENGINE=sqlite3

# Database name (for SQLite, this is the file path relative to BASE_DIR)
DB_NAME=db.sqlite3

# Database credentials (not needed for SQLite)
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend: console, smtp
EMAIL_BACKEND=console

# SMTP settings (only needed if EMAIL_BACKEND=smtp)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@feastflow.com

# =============================================================================
# SECURITY SETTINGS (Production only)
# =============================================================================

# Enable HTTPS redirect
SECURE_SSL_REDIRECT=False

# HSTS settings
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Secure cookies
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache backend: locmem, redis
CACHE_BACKEND=locmem

# Redis URL (only needed if CACHE_BACKEND=redis)
REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# AWS S3 SETTINGS (Optional - for static/media files)
# =============================================================================

USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to BASE_DIR)
LOG_FILE=logs/django.log
